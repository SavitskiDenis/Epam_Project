@model IEnumerable<Common.Entity.DetaineeWithName>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<table class="table table-sm">
    <tr>
        <th>
            ФИО
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Адрес прописки
        </th>
        <th>
            Телефон
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr class="vision">
            <td>
                <p>@item.person.FirstName</p>
                <p>@item.person.LastName</p>
            </td>
            <td>
                @{
                    string date = item.detainee.BornDate.ToShortDateString();
                    <p>@date</p>
                }
            </td>
            <td>
                @Html.TextAreaFor(modelItem => item.detainee.Address, new { disabled = "disabled" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detainee.Phone)
            </td>
            <td>
                <button title="Подробнее" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '@Url.Action("FullInformation", "Detainees",new { item.detainee.Id})'"><img height="20" src="data:image/png;base64,"></button>
            </td>
        </tr>
    }

</table>
