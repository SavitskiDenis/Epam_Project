@model Special_Insulator.WEB.Models.WorkerWithName

@{
    ViewBag.Title = "Изменение";
}

<div class="container" style="margin-top:20px;margin-bottom:20px">
    <div class="row justify-content-center" }>
        @using (@Html.BeginForm("EditWorker", "Workers", FormMethod.Post, new { @style = "border:1px solid #000000;border-radius:20px", @class = "col-lg-4" }))
        {
            @Html.HiddenFor(model => model.Id);
            @Html.HiddenFor(model => model.PeopleId);
            <div class="row  justify-content-center">
                <div class="col-10" style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                    <label>Фамилия</label>
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10"  style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                    <label>Имя</label>
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10"  style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                    <label>Отчество</label>
                    @Html.TextBoxFor(model => model.Patronymic, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Patronymic)
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10" >
                    <label>Должность</label>
                    @Html.DropDownListFor(model => model.WorkerPostId, ViewBag.Posts as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="row justify-content-center" style="margin-bottom:20px; margin-top:20px">
                <div class="col-4">
                    <input type="submit" class="btn btn-outline-info" value="Подтвердить" />
                </div>
                <div class="col-4">
                    <input type="button" class="btn btn-outline-info" value="Назад" onclick="location.href = '@Url.Action("Index", "Workers",new { Model.Id})'" />
                </div>

            </div>
        }
    </div>
        </div>