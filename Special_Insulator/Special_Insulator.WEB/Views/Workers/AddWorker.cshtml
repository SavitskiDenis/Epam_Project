@model Special_Insulator.WEB.Models.WorkerWithName
@{
    ViewBag.Title = "Добавление сотрудника";
}

<div class="container" style="margin-top:20px;margin-bottom:20px">
    <div class="row justify-content-center"}>
        @using (@Html.BeginForm("AddWorker", "Workers", FormMethod.Post, new { @style = "border:1px solid #000000;border-radius:20px", @class = "col-lg-6" }))
        {
            <div style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                <label>Имя</label>
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
            <div style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                <label>Фамилия</label>
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
            <div style="margin:0 auto;margin-bottom:5px">
                <label>Должность</label>
                @Html.TextAreaFor(model => model.WorkerPost, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.WorkerPost)
            </div>
            <div class="form-group" style="display:block; margin:0 auto; margin-bottom:20px; margin-top:20px">
                <input type="submit" class="btn btn-dark" value="Подтвердить" />
                <input type="button" class="btn btn-dark" value="Назад" onclick="location.href = '@Url.Action("Index", "Edit")'" />
            </div>
        }
    </div>
</div>