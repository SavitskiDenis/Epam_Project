@model IEnumerable<Common.Entity.WorkerAndName>

@{
    ViewBag.Title = "Список сотркдников";
}

<table class="table table-sm">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия 
        </th>
        <th>
            Должность
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="vision">

            <td>
                @Html.DisplayFor(modelItem => item.Person.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.WorkerPost)
            </td>
            <td>
            <td>
                <button title="Удалить" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '@Url.Action("DeleteWorker", "Workers", new { item.Worker.Id })'"><img height="20" src="data:image/png;base64,"></button>
                <button title="Изменить" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '@Url.Action("EditWorker", "Workers", new { item.Worker.Id })'"><img height="20" src="https://img.icons8.com/ios/50/000000/edit-column.png"></button>
            </td>
        </tr>
    }

</table>
