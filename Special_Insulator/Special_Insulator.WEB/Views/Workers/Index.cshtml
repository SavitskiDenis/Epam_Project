@model IEnumerable<SpecialInsulator.Common.Entity.WorkerAndName>

@{
    ViewBag.Title = "Список сотркдников";
}
<div style="margin-top:20px">
    @*<a onclick="location.href = '@Url.Action("Index","Edit")'"><img src="https://img.icons8.com/windows/32/000000/back.png"></a>*@
    <button onclick="location.href = '@Url.Action("Index","Edit")'" class="btn btn-outline-info"><img height="20" src="https://img.icons8.com/windows/32/000000/back.png"></button>
</div>
<div class="container">
    <table class="table table-sm">
        <tr>
            <th>
                Фамилия
            </th>
            <th>
                Имя
            </th>
            <th>
                Отчество
            </th>
            <th>
                Должность
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Worker.WorkerPost.PostName)
                </td>
                <td>
                    <button title="Удалить" class="btn btn-outline-info" style="margin-top:5px;" onclick="location.href = '@Url.Action("DeleteWorker", "Workers", new { item.Worker.Id })'"><img height="20" src="data:image/png;base64,"></button>
                    <button title="Изменить" class="btn btn-outline-info" style="margin-top:5px;" onclick="location.href = '@Url.Action("EditWorker", "Workers", new { item.Worker.Id })'"><img height="20" src="https://img.icons8.com/ios/50/000000/edit-column.png"></button>
                </td>
            </tr>
        }

    </table>
</div>


