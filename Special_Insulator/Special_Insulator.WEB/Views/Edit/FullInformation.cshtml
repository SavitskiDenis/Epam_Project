@model Common.Entity.DetaineeWithName
@{
    ViewBag.Title = "Информация о задержанном";
}

<div class="container-fluid">
    <div class="row justify-content-end" style="margin-bottom:35px;margin-top:25px">
        <a class="col-lg-2" onclick="location.href = '@Url.Action("EditDetaineeInfo","EditInformation",new { Model.detainee.Id})'" title="Изменить"><img src="https://img.icons8.com/ios/32/000000/edit-column.png"></a>
    </div>
    <div class="justify-content-center">
        <img src="https://image.freepik.com/free-icon/male-user-close-up-shape-for-facebook_318-37635.jpg" width="200" style="border:2px solid #0094ff;border-radius:50px" />
    </div>
    <div class="row">
        <div class="col-lg-6">
            <p>Имя: @Model.person.FirstName</p>
            <p>Фамилия: @Model.person.LastName</p>
            <p>Дата рождения: @Model.detainee.BornDate.ToShortDateString()</p>
            <p>Семейное положение:@Model.detainee.Status</p>
        </div>
        <div class="col-lg-6">
            <p>Адрес</p>
            <textarea cols="50" rows="3" disabled="disabled" style="resize:none">@Model.detainee.Address</textarea>
            <p>Дополнительная информация</p>
            <textarea cols="50" rows="3" disabled="disabled" style="resize:none">@Model.detainee.Additional_information</textarea>
        </div>
    </div>


    <table>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model.detainee.Detentions)
        {
            <tr></tr>
        }

    </table>




</div>
