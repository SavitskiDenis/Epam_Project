@model IEnumerable<Common.Entity.DetaineeWithName>

@{
    ViewBag.Title = "Режим редактирования";
}
<p style="color:red">@ViewBag.Error</p>
<div class="row">
    <div class="col-md-3">
        <div class="left-sidebar">
            <ul class="left-sidebar_menu">
                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("AddDetainee", "Detainees")'">Добавить задержанного</a></li>
                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("AddWorker", "Workers")'">Добавить сотрудника</a></li>
                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "Workers")'">Список сотрудников</a></li>
                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("AddDepartment", "Departments")'">Добавить место содеражания</a></li>
                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "Departments")'">Список мест содержания</a></li>
                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("AddPost", "Post")'">Добавить должность</a></li>
                <li><a style="cursor:pointer"  onclick="location.href = '@Url.Action("Index", "Post")'">Список должностей</a></li>
                @if (User.IsInRole("Admin"))
                 {
                    <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "User")'">Список пользователей</a></li>
                 }

            </ul>
        </div>
        @foreach(var item in ViewBag.Advertising)
        {
            <div class="left-sidebar_advertising">
                <img style="width:100%" src="@item.Key[0].Value" />
                <div class="left-sidebar_advertising-description">
                    <h3>@item.Value[0]</h3>
                    <p>@item.Value[1]</p>
                    <a href="@item.Key[1].Value">Подробнее</a>
                </div>
            </div>
        }
    </div>

    <div class="col-md-8">
        <div class="content">
            <table class="table table-sm">
                <tr>
                    <th>
                        ФИО
                    </th>
                    <th>
                        Дата последнего задержания
                    </th>
                    <th>
                        Адрес прописки
                    </th>

                    <th>
                        Телефон
                    </th>
                    <th></th>
                    <th></th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p>@item.person.LastName</p>
                            <p>@item.person.FirstName</p>
                            <p>@item.person.Patronymic</p>
                        </td>
                        <td>
                            @{
                                if (item.lastDetention.Year>1)
                                {
                                    <p>@item.lastDetention.ToShortDateString()</p>
                                }
                                else
                                {
                                    <p>XX.XX.XXXX</p>
                                }
                            }

                        </td>
                        <td>
                            @Html.TextAreaFor(modelItem => item.detainee.Address, new { disabled = "disabled",resize = "none" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.detainee.Phone)
                        </td>
                        <td>
                            <button title="Подробнее" class="btn btn-outline-info" style="margin-top:5px;" onclick="location.href = '@Url.Action("FullInformation", "Edit",new { item.detainee.Id})'"><img height="20" src="data:image/png;base64,"></button>
                        </td>
                        <td>
                            <button title="Удалить" class="btn btn-outline-info" style="margin-top:5px;" onclick="location.href = '@Url.Action("DeleteDetainee", "Detainees", new { item.detainee.Id })'"><img height="20" src="data:image/png;base64,"></button>
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>

</div>


