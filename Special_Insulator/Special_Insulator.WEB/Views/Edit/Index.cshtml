@model IEnumerable<Common.Entity.DetaineeWithName>

@{
    ViewBag.Title = "Режим редактирования";
}
<div class="row justify-content-center" style="margin-bottom:35px;margin-top:25px">
    <div>
        <a class="col-lg-2" onclick="location.href = '@Url.Action("AddDetainee", "Detainees")'" title="Добавить задержанного"><img src="https://img.icons8.com/windows/32/000000/add.png"></a>
    </div>

    <button  class="btn btn-dark" style="margin-right:5px" onclick="location.href = '@Url.Action("AddWorker", "Workers")'">
        Добавить сотрудника
    </button>

    <button  class="btn btn-dark" style="margin-right:5px" onclick="location.href = '@Url.Action("Index", "Workers")'">
        Список сотрудников
    </button>

    <button  class="btn btn-dark" style="margin-right:5px" onclick="location.href = '@Url.Action("AddDepartment", "Departments")'">
        Добавить отдел
    </button>

    <button  class="btn btn-dark" style="margin-right:5px" onclick="location.href = '@Url.Action("Index", "Departments")'">
        Список отделов
    </button>

</div>

<div class="container-fluid">

    <table class="table table-sm">
        <tr>
            <th>
                ФИО
            </th>
            <th>
                Дата рождения
            </th>
            <th>
                Место работы
            </th>
            
            <th>
                Телефон
            </th>
            <th></th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
            <tr class="vision">
                <td>
                    <p>@item.person.FirstName</p>
                    <p>@item.person.LastName</p>
                </td>
                <td>
                    @{
                        string date = item.detainee.BornDate.ToShortDateString();
                        <p>@date</p>
                    }
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.detainee.Workplace, new { disabled = "disabled" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.detainee.Phone)
                </td>
                <td>
                    <button title="Подробнее" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '@Url.Action("FullInformation", "Edit",new { item.detainee.Id})'"><img height="20" src="data:image/png;base64,"></button>
                </td>
                <td><button title="Удалить" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '@Url.Action("DeleteDetainee", "Edit", new { item.detainee.Id })'"><img height="20" src="data:image/png;base64,"></button>
                
            </tr>
        }

    </table>



</div>
