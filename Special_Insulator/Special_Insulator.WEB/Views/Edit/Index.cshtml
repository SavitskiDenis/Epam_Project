@model IEnumerable<Common.Entity.DetaineeWithName>

@{
    ViewBag.Title = "Режим редактирования";
}
<div class="row justify-content-end" style="margin-bottom:35px;margin-top:25px">
    <a class="col-lg-2" onclick="location.href = '@Url.Action("AddDetainee", "AddInformation")'" title="Добавить"><img src="https://img.icons8.com/windows/32/000000/add.png"></a>
</div>
<div class="container-fluid">


    <table class="table table-sm">
        <tr>
            <th>
                ФИО
            </th>
            <th>
                Дата рождения
            </th>
            <th>
                Место работы
            </th>
            @*<th>
                Семейное положение
            </th>*@
            <th>
                Телефон
            </th>
            @*<th>
                Адрес прописки
            </th>
            <th>
                Дополнительная информация
            </th>*@
            <th></th>
            <th></th>
            @*<th></th>*@

        </tr>

        @foreach (var item in Model)
        {
            <tr class="vision">
                <td>
                    <p>@item.person.FirstName</p>
                    <p>@item.person.LastName</p>
                </td>
                <td>
                    @{
                        string date = item.detainee.BornDate.ToShortDateString();
                        <p>@date</p>
                    }
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.detainee.Workplace, new { disabled = "disabled" })
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.detainee.Status)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.detainee.Phone)
                </td>
                @*<td>
                    @Html.TextAreaFor(modelItem => item.Address, new { disabled = "disabled" })
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.Additional_information, new { disabled = "disabled" })
                </td>*@
                <td>
                    <button title="Подробнее" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '#'"><img height="20" src="data:image/png;base64,"></button>
                </td>
                <td><button title="Удалить" class="btn btn-default" style="margin-top:5px;" onclick="location.href = '#'"><img height="20" src="data:image/png;base64,"></button>
                @*<td><button class="btn btn-default" style="margin-top:5px;" onclick="location.href = '#'"><img height="20" src="data:image/png;base64,"></button></td>*@
            </tr>
        }

    </table>



</div>
