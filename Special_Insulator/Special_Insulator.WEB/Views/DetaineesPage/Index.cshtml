@model IEnumerable<Common.Entity.Detainee>

@{
    ViewBag.Title = "Список задержанных";
}

<div class="row justify-content-center" style="margin-bottom:30px">
    <a onclick="location.href = '@Url.Action("Index", "Edit")'" title="Редактирование"><img src="data:image/png;base64,"></a>
</div>

<div class="container-fluid">
    <table class="table table-sm">
        <tr>
            <th>
                Фото
            </th>
            <th>
                ФИО
            </th>
            <th>
                Дата рождения
            </th>
            <th>
                Место работы
            </th>
            <th>
                Семейное положение
            </th>
            <th>
                Телефон
            </th>
            <th>
                Адрес прописки
            </th>
            <th>
                Дополнительная информация
            </th>
            <th>Задержания</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr class="vision">
                <td>
                    <button class="btn btn-default" style="margin-top:5px;" onclick="location.href = '@item.Photo'"><img height="20" src="data:image/png;base64,"></button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @{
                        string date = item.BornDate.ToShortDateString();
                        <p>@date</p>
                    }
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.Workplace, new { disabled = "disabled" })
                </td>
                <td>
                    @if (item.Status == Common.Entity.Marital_status.Divorced)
                    {
                        <p>Разведен (Разведена)</p>
                    }
                    else if (item.Status == Common.Entity.Marital_status.Married)
                    {
                        <p>Женат (Замужем)</p>
                    }
                    else
                    {
                        <p>Одинок (Одинока)</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.Address, new { disabled = "disabled" })
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.Additional_information, new { disabled = "disabled" })
                </td>
                <td>
                    <button class="btn btn-default" style="margin-top:5px;" onclick="location.href = '#'"><img height="20" src="data:image/png;base64,"></button>
                </td>

            </tr>
        }

    </table>
</div>

