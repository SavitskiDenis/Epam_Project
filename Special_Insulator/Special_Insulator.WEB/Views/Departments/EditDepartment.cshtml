@model Special_Insulator.WEB.Models.DepartmentMod
@{
    ViewBag.Title = "Изменение отдела";
}

<div class="container" style="margin-top:20px;margin-bottom:20px">
    <div class="row justify-content-center" }>
        @using (@Html.BeginForm("EditDepartment", "Departments", FormMethod.Post, new { @style = "border:1px solid #000000;border-radius:20px", @class = "col-lg-6" }))
        {
            @Html.HiddenFor(model => model.Id);
            <div style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                <label>Адрес</label>
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.Address)
            </div>

            <div class="form-group" style="display:block; margin:0 auto; margin-bottom:20px; margin-top:20px">
                <input type="submit" class="btn btn-dark" value="Подтвердить" />
                <input type="button" class="btn btn-dark" value="Назад" onclick="location.href = '@Url.Action("Index", "Departments")'" />
            </div>
        }
    </div>
</div>




