@model Special_Insulator.WEB.Models.DepartmentMod
@{
    ViewBag.Title = "Добавление отдела";
}

<div class="container" style="margin-top:20px;margin-bottom:20px">
    <div class="row justify-content-center" >
        @using (@Html.BeginForm("AddDepartment", "Departments", FormMethod.Post, new { @style = "border:1px solid #000000;border-radius:20px", @class = "col-lg-4" }))
        {
            <div class="row  justify-content-center">
                <div class="col-10" style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                    <label>Адрес</label>
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
            <div class="row justify-content-center" style="margin-bottom:20px; margin-top:20px">
                <div class="col-4">
                    <input type="submit" class="btn btn-outline-info" value="Подтвердить" />
                </div>
                <div class="col-4">
                    <input type="button" class="btn btn-outline-info" value="Назад" onclick="location.href = '@Url.Action("Index", "Edit")'" />
                </div>
            </div>
        }
    </div>
</div>

