@model Special_Insulator.WEB.Models.UserRegistration
@{
    ViewBag.Title = "Регистрация";
}
<div class="container" style="margin-top:20px" >
    <div class="row justify-content-center"}>
        @using (@Html.BeginForm("Registration", "Authentication", FormMethod.Post, new { @style="border:1px solid #000000;border-radius:20px" ,@class="col-lg-4" }))
        {
            <div style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                <label>Логин</label>
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
            <div >
                <label >E-mail</label>
                @Html.TextBoxFor(model => model.E_mail, new { @class = "form-control",@style="margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.E_mail)
            </div>
            <div style="margin:0 auto;margin-bottom:5px">
                <label >Пароль</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div  style="margin:0 auto;margin-bottom:5px">
                <label>Подтверждение</label>
                @Html.PasswordFor(model => model.Re_Password, new { @class = "form-control", @style = "margin:0 auto;" })
                @Html.ValidationMessageFor(model => model.Re_Password)
            </div>
            <div class="form-group" style="display:block; margin:0 auto; margin-bottom:20px; margin-top:20px">
                <input type="submit" class="btn btn-dark" value="Подтвердить" />
                <input type="button" class="btn btn-dark" value="Назад" onclick="location.href = '@Url.Action("Login", "Authentication")'" />
            </div>
                
        }
    </div>
</div>

