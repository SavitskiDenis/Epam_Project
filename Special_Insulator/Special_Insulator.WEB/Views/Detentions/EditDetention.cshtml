@model Special_Insulator.WEB.Models.DetentionModel

@{
    ViewBag.Title = "Редактирование задержания";
}


<div class="container" style="margin-top:20px;margin-bottom:20px">
    <div class="row justify-content-center" }>
        @using (@Html.BeginForm("EditDetention", "Detentions", FormMethod.Post, new { @style = "border:1px solid #000000;border-radius:20px", @class = "col-lg-4" }))
        {
            @Html.HiddenFor(model => model.DetaineeId);
            <div class="row  justify-content-center">
                <div class="col-10" style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                    <label>Дата задержания</label>
                    @Html.TextBoxFor(model => model.DetentionDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DetentionDate, "", new { @style = "color:red;font-weight: bold;" })
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10" style="margin:0 auto;margin-bottom:5px ; margin-top:10px">
                    <label>Дата доставления</label>
                    @Html.TextBoxFor(model => model.DeliveryDate, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @style = "color:red;font-weight: bold;" })
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10">
                    <label>Дата освобождения</label>
                    @Html.TextBoxFor(model => model.LiberationDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LiberationDate, "", new { @style = "color:red;font-weight: bold;" })
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10">
                    <label>Кем задержан</label>
                    @Html.DropDownListFor(model => model.DetainWorkerId, ViewBag.DetainWorkers as SelectList, new { @class = "form-control"})
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10">
                    <label>Кем доставлен</label>
                    @Html.DropDownListFor(model => model.DeliveryWorkerId, ViewBag.DeliveryWorkers as SelectList, new { @class = "form-control"})
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10">
                    <label>Кем освобожден</label>
                    @Html.DropDownListFor(model => model.ReleaseWorkerId, ViewBag.ReleaseWorkers as SelectList, new { @class = "form-control"})
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10">
                    <label>Место содержания</label>
                    @Html.DropDownListFor(model => model.DetentionPlaceId, ViewBag.Departments as SelectList, new { @class = "form-control"})
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10" style="margin:0 auto;margin-bottom:5px">
                    <label>Cумма начисленная</label>
                    @Html.TextBoxFor(model => model.AccruedAmount, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.AccruedAmount, "", new { @style = "color:red;font-weight: bold;" })
                </div>
            </div>
            <div class="row  justify-content-center">
                <div class="col-10" style="margin:0 auto;margin-bottom:5px">
                    <label>Cумма выплаченная</label>
                    @Html.TextBoxFor(model => model.PaidAmount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaidAmount, "", new { @style = "color:red;font-weight: bold;" })
                </div>
            </div>
            <div class="row justify-content-center" style="margin-bottom:20px; margin-top:20px">
                <div class="col-4">
                    <input type="submit" class="btn btn-outline-info" value="Подтвердить" />
                </div>
                <div class="col-4">
                    <input type="button" class="btn btn-outline-info" value="Назад" onclick="location.href = '@Url.Action("Index", "Edit")'" />
                </div>

            </div>
        }
    </div>
</div>



