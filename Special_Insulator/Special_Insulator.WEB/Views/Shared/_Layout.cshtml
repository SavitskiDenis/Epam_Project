<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/PageStyles.css" rel="stylesheet" />
    <link href="~/Content/Topbar.css" rel="stylesheet" />

</head>
<body style="padding:0;background-color:#f8f8ff">
    <div class="container-fluid">
        <div class="top-nav">
            <div class="row justify-content-between align-items-center">
                <div class="col-md-auto">
                    <div class="logo">
                        <a title="Главная страница" class="navbar-brand" style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "Home")'"><img src="data:image/png;base64,"></a>
                    </div>
                </div>
                <div class="col-md-auto ">
                    <ul class="top-nav-menu">
                        <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "Detainees")'">Список задержанных</a></li>
                        <li><a style="cursor:pointer" onclick="location.href = '#'">Другое</a></li>
                    </ul>
                </div>
                <div class="col-md-auto">
                    <ul class="top-nav-menu">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Login", "Authentication")'">Вход</a></li>
                        }
                        else
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "Edit")'">Режим администрирования</a></li>
                                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("LogOut", "Authentication")'">Выход</a></li>

                            }
                            else if (User.IsInRole("Editor"))
                            {
                                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("Index", "Edit")'">Режим редактирования</a></li>
                                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("LogOut", "Authentication")'">Выход</a></li>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <li><a style="cursor:pointer" onclick="location.href = '@Url.Action("LogOut", "Authentication")'">Выход</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
   
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>